<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ACEDC9"
    tools:context=".recipes.add.RecipeAddActivity"
    >

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/left"
        />

    <ImageView
        android:id="@+id/addRecipeImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@+id/addRecipeDirections"
        app:layout_constraintTop_toBottomOf="@+id/addRecipeDirections"
        app:srcCompat="@drawable/chef" />

    <Button
        android:id="@+id/addRecipeSubmitBtn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/round_btn"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/addRecipeName"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="recipe name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CFCCCC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addRecipeTime"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="time in minutes"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CFCCCC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addRecipeName"
        app:layout_constraintTop_toBottomOf="@+id/addRecipeName" />

    <EditText
        android:id="@+id/addRecipeShelfLife"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="shelf life"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CFCCCC"
        app:layout_constraintStart_toStartOf="@+id/addRecipeTime"
        app:layout_constraintTop_toBottomOf="@+id/addRecipeTime" />

    <TextView
        android:id="@+id/recipeAddTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Shelf Life"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addRecipeShelfLife" />

    <TextView
        android:id="@+id/recipeAddTime8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Cooking Time"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addRecipeTime" />

    <!--    <ImageView-->
<!--        android:id="@+id/addRecipeImg"-->
<!--        android:layout_width="201dp"-->
<!--        android:layout_height="206dp"-->
<!--        android:layout_marginTop="356dp"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintHorizontal_bias="0.885"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        tools:srcCompat="@drawable/google" />-->

    <TextView
        android:id="@+id/recipeAddTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Ingedients"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addRecipeIngredients" />

    <TextView
        android:id="@+id/recipeAddTime9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Directions"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addRecipeDirections" />

    <TextView
        android:id="@+id/recipeAddTime3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Image"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addRecipeImg" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addRecipeName" />

    <EditText
        android:id="@+id/addRecipeIngredients"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:gravity="start|top"
        android:hint="ingredients"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CFCCCC"
        app:layout_constraintStart_toStartOf="@+id/addRecipeShelfLife"
        app:layout_constraintTop_toBottomOf="@+id/addRecipeShelfLife" />

    <EditText
        android:id="@+id/addRecipeDirections"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:gravity="start|top"
        android:hint="directions"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CFCCCC"
        app:layout_constraintStart_toStartOf="@+id/addRecipeIngredients"
        app:layout_constraintTop_toBottomOf="@+id/addRecipeIngredients" />
</androidx.constraintlayout.widget.ConstraintLayout>